							<th>Parcels</th>
						</tr>
					</thead>
					<tbody>
					{{#each couriers}}
						<tr>
							<td><img class="user-icon" src="img/user.png"></td>
							{{!-- <td><a href="admin-couriers-indiv/{{this.courier_name}}">{{this.courier_name}}</a></td> --}}
